{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build STM32",
            "type": "shell",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash STM32",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "E:/OpenOCD/xpack-openocd-0.12.0-6/openocd/scripts/interface/stlink.cfg",
                "-f",
                "E:/OpenOCD/xpack-openocd-0.12.0-6/openocd/scripts/target/stm32f1x.cfg",
                "-c",
                "program 3. PWM Driver/Tools/blinkled.elf verify reset exit"
            ],
            "group": {
                "kind": "none"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean STM32",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        }
    ]
}
